{
  "parser": "@typescript-eslint/parser",
  "extends": ["airbnb-base"],
  "plugins": ["@typescript-eslint"],
  "rules": {
    "import/extensions": "off",
    "quotes": ["error", "double"],
    "@typescript-eslint/quotes": ["error", "double"],
    "import/prefer-default-export": "off"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  },
  "env": {
    "jest": true
  }
}
